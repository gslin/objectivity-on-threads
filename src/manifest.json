{
  "manifest_version": 3,
  "name": "Objectivity on Threads",
  "version": "1.0.0",
  "description": "Analyze the objectivity of Threads posts using ChatGPT",
  "permissions": ["storage"],
  "background": {
    "scripts": ["background.js"]
  },
  "action": {},
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["*://www.threads.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "objectivity-on-threads@example.com",
      "strict_min_version": "109.0"
    }
  }
}
